<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="screen.dimmer.pixelfilter.MainActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Enable filter"
                android:id="@+id/enableFilter"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/text_big"
                android:gravity="center_vertical" />

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:layout_below="@+id/enableFilter"
                android:layout_centerHorizontal="true"
                android:id="@+id/separator1" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/selectPresetView"
                android:id="@+id/separator1">

                <Spinner
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner"
                    android:spinnerMode="dropdown"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/buttonStyleSmall"
                    android:text="Delete"
                    android:id="@+id/deletePreset"
                    android:layout_weight="0"
                    android:visibility="invisible" />

            </LinearLayout>

            <Space
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_below="@+id/selectPresetView"
                android:layout_centerHorizontal="true"
                android:id="@+id/separator2" />

            <include layout="@layout/grid" />

            <Space
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_below="@+id/selectPresetView"
                android:layout_centerHorizontal="true"
                android:id="@+id/separator3" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shift pattern each"
                    android:id="@+id/textView"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/shift_timer"
                    android:layout_gravity="center_vertical"
                    android:entries="@array/shift_timer"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
